<h2>Edit <%= @article.title %></h2>

<form action="/articles/<%= @article.id %>" method="post">
  <input type="hidden" name="_method" value="patch" />
  <div>
    <label>Title:</label>
    <input type="text" name="article[title]" value="<%= @article.title %>" />
  </div>
  <div>
    <label>Content:</label>
    <input type="text" name="article[content]" value="<%= @article.content %>" />
  </div>
  <input type="submit" value="edit <%= @article.title %>" />
</form>

<form action="/articles/<%= @article.id %>" method="post">
  <input type="hidden" name="_method" value="delete" />
  <input id="mysubmit" type="submit" value="Delete Article" />
</form>
